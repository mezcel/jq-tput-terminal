#!/bin/bash

function loadSourceScripts {
	currentDirPath=$(dirname $0)
	
	for i in $currentDirPath/source/*.txt; do  # or wget-*.sh instead of *.sh
		source "$i" -H   || break # if needed
	done
	
}

function useTheLoadedSource {	
	mainInit
	myMian


	## Never reached
	## Restore cursor
	tput cnorm
	tput sgr0
	reset
}

## RUN APP
loadSourceScripts
useTheLoadedSource
